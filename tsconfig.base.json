{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@org/common-events": ["lib/common/common-events/src/index.ts"],
      "@org/feature-times-table": [
        "lib/features/feature-times-table/src/index.ts"
      ],
      "@org/local-storage": ["lib/common/utils/local-storage/src/index.ts"],
      "@org/message-bus": ["lib/common/utils/message-bus/src/index.ts"],
      "@org/page-common": ["lib/pages/page-common/src/index.ts"],
      "@org/page-lesson-selector": [
        "lib/pages/page-lesson-selector/src/index.ts"
      ],
      "@org/page-lesson-summary": [
        "lib/pages/page-lesson-summary/src/index.ts"
      ],
      "@org/page-times-table-guesser": [
        "lib/pages/page-times-table-guesser/src/index.ts"
      ],
      "@org/page-times-table-quiz": [
        "lib/pages/page-times-table-quiz/src/index.ts"
      ],
      "@org/ui-dialog": ["lib/common/ui/ui-dialog/src/index.ts"],
      "@org/ui-keyboard": ["lib/common/ui/ui-keyboard/src/index.ts"],
      "@org/ui-quiz-answer-item": [
        "lib/common/ui/ui-quiz-answer-item/src/index.ts"
      ],
      "@org/ui-spinner": ["lib/common/ui/ui-spinner/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
